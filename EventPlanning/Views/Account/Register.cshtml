@model RegisterViewModel
@{
    ViewData["Title"] = "Регистрация нового аккаунта";
}

<h3>@ViewData["Title"]</h3>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Role"></label>
                <input asp-for="Role" class="form-control"
                       data-val-required="Поле 'Роль' обязательно для заполнения"
                       data-val="true"/>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" 
                       data-val-required="Поле 'Email' обязательно для заполнения"
                       data-val="true"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control"
                       data-val-required="Поле 'Пароль' обязательно для заполнения"
                       data-val="true"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" 
                       data-val-required="Необходимо подтвердить пароль"
                       data-val="true"/>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-outline-info">Зарегистрироваться</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
