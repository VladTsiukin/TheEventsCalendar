@inject IViewLocalizer Localizer

<!-- modals -->
@* success modal *@
<div class="modal fade" id="successModal" tabindex="-1" role="dialog" aria-labelledby="successModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content d-flex align-items-center justify-content-center h-100">
            <div class="modal-header">
                <i class="far fa-check-circle text-info" style="font-size: 4rem;"></i>
            </div>
            <div class="modal-body">
                <p class="text-info text-center">@Localizer["Success"]:)</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-info" data-dismiss="modal">Ok</button>
            </div>
        </div>
    </div>
</div>

@* error modal *@
<div class="modal fade" id="errorModal" tabindex="-1" role="dialog" aria-labelledby="errorModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content d-flex align-items-center justify-content-center h-100">
            <div class="modal-header">
                <i class="fas fa-exclamation-triangle text-secondary" style="font-size: 4rem;"></i>
            </div>
            <div class="modal-body">
                <p class="text-danger text-center">@Localizer["An error has uccurred"]!</p>
                <p class="text-danger text-center">@Localizer["Please try again"].</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Ok</button>
            </div>
        </div>
    </div>
</div>

@* Data not found modal *@
<div class="modal fade" id="notDataModal" tabindex="-1" role="dialog" aria-labelledby="notDataModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content d-flex align-items-center justify-content-center h-100">
            <div class="modal-header">
                <i class="fas fa-not-equal text-secondary" style="font-size: 4rem;"></i>
            </div>
            <div class="modal-body">
                <p class="text-secondary text-center">"@Localizer["There are no events on this date"].</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Ok</button>
            </div>
        </div>
    </div>
</div>

@* subscriber exist modal *@
<div class="modal fade" id="subscriberExistModal" tabindex="-1" role="dialog" aria-labelledby="subscriberExistModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content d-flex align-items-center justify-content-center h-100">
            <div class="modal-header">
                <i class="fas fa-chevron-circle-down text-info" style="font-size: 4rem;"></i>
            </div>
            <div class="modal-body">
                <p class="text-info text-center">@Localizer["You are already subscribed to this event"].</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-info" data-dismiss="modal">Ok</button>
            </div>
        </div>
    </div>
</div>