@inject IViewLocalizer Localizer

@model EventPlanning.Models.EventsViewModels.EventViewModel

@{
    ViewData["Title"] = Localizer["Event"];
}

<div class="mb-3"></div>
<h2>@Localizer["Event"] <span class="badge badge-secondary">Info</span></h2>

<div>
    <hr />
    <ul class="list-group">
        <li class="list-group-item list-group-item-info d-flex justify-content-between align-items-center">
            @Html.DisplayNameFor(model => model.Name)
            <span class="badge badge-light badge-pill">@Html.DisplayFor(model => model.Name)</span>
        </li>
        <li class="list-group-item list-group-item-info d-flex justify-content-between align-items-center">
            @Localizer["Date"]
            <span class="badge badge-light badge-pill">
                @Model.EventDate.Date.ToShortDateString()
            </span>
        </li>
        <li class="list-group-item list-group-item-info d-flex justify-content-between align-items-center">
            @Localizer["Time"]
            <span class="badge badge-light badge-pill">
                @Model.EventDate.ToString("HH:mm:ss")
            </span>
        </li>
        <li class="list-group-item list-group-item-info d-flex justify-content-between align-items-center">
            @Html.DisplayNameFor(model => model.AmountOfParticipants)
            <span class="badge badge-light badge-pill">@Html.DisplayFor(model => model.AmountOfParticipants)</span>
        </li>
        <li class="list-group-item  list-group-item-info d-flex justify-content-between align-items-center">
            @Html.DisplayNameFor(model => model.SubscribersCount)
            <span class="badge badge-light badge-pill">@Html.DisplayFor(model => model.SubscribersCount)</span>
        </li>
        <li class="list-group-item list-group-item-info d-flex justify-content-between align-items-center">
            @Html.DisplayNameFor(model => model.DateOfCreation)
            <span class="badge badge-light badge-pill">@Html.DisplayFor(model => model.DateOfCreation)</span>
        </li>
        @if (Model.Content != null)
        {
            foreach (var item in Model.Content)
            {
                <li class="list-group-item list-group-item-info d-flex justify-content-between align-items-center">
                    @item.Name
                    <span class="badge badge-light badge-pill">@item.Value</span>
                </li>
            }
        }
    </ul>
</div>
<div class="mt-3">
    <a class="btn btn-sm btn-outline-main" asp-action="AllEvents" 
       asp-controller="Event">@Localizer["To the list of events"]</a>
</div>
